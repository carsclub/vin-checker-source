# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Stripe Payment Configuration (LIVE KEYS for production)
STRIPE_SECRET_KEY_LIVE=sk_live_your_live_secret_key
VITE_STRIPE_PUBLIC_KEY_LIVE=pk_live_your_live_public_key

# Vehicle Database API
VEHICLE_DATABASE_API_KEY=your_api_key

# Auto.dev API (Primary VIN decoder)
AUTO_DEV_API_KEY=your_auto_dev_api_key

# NHTSA API (Government database)
NHTSA_API_KEY=your_nhtsa_api_key

# Email Configuration (Optional)
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Security Configuration
ENCRYPTION_KEY=your-secure-32-byte-encryption-key
HMAC_SECRET=your-hmac-secret-key
ADMIN_SECRET_KEY=your-admin-access-key

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Environment
NODE_ENV=development

# Google Analytics & AdSense (Optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_GOOGLE_ADSENSE_CLIENT_ID=ca-pub-XXXXXXXXXXXXXXXX